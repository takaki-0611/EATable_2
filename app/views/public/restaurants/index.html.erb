<div class="container">
  <div class="row">
    <div class="col-sm-12 px-sm-0 my-5">
      <h2>店一覧<span style="font-size:70%">(全<%= @total_restaurants.count %>件)</span></h2>
    </div>
  </div>
  <div class="row my-3 text-center text-md-left">
    <% @restaurants.each do |restaurant| %>
      <div class="col-xs-10 col-md-6 col-lg-3 mb-3">
        <div class="card w-100 bg-transparent border" style="width: 18rem;">
          <%= link_to restaurant_path(restaurant.id) do %>
            <p class="img-wrap"><%= attachment_image_tag item, :image, :fill, 245, 180, class:'icon', fallback: "no_image.jpg" %></p>
          <% end %>
          <div class="card-body">
            <p class="item-details item-name card-text"><%= item.name %></p>
            <% if item.is_active == true %>
              <p class="item-details card-text">¥<%= (item.price * 1.1).to_i.to_s(:delimited, delimiter: ",") %></p>
            <% else %>
              <p class="text-danger font-weight-bold card-text">満席</p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate(@restaurants) %>
</div>