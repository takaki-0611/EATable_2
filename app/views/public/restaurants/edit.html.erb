<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h3 class="heading">お店情報の編集</h3>
    <%= form_with model:@restaurant, local:true do |f| %>
      <%= render 'layouts/errors', obj: @course %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
     <div class="form-group">
        <%= f.label :body %>
        <%= f.attachment_field :body, class: "form-control-file body" %>
      </div>
      <div class="form-group">
        <%= f.label :phone_number %>
        <%= f.text_area :phone_number, class: "form-control phone_number" %>
      </div>
      <div class="form-group">
        <%= f.submit "編集内容を保存する", class: "btn btn-outline-success mr-5" %>
      </div>
    <% end %>
  </div>
</div>