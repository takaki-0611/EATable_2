<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h3 class="heading">ユーザー情報の編集</h3>
    <%= form_with model:@user, local:true do |f| %>
      <%= render 'layouts/errors', obj: @course %>
      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control last_name" %>
      </div>
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control first_name" %>
      </div>
      <div class="form-group">
        <%= f.label :kana_last_name %>
        <%= f.text_field :last_name, class: "form-control last_name" %>
      </div>
      <div class="form-group">
        <%= f.label :kana_first_name %>
        <%= f.text_field :last_name, class: "form-control last_name" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.attachment_field :email, class: "form-control-file email" %>
      </div>
      <div class="form-group">
        <%= f.label :postal_code %>
        <%= f.text_area :postal_code, class: "form-control postal_code" %>
      </div>
      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_area :address, class: "form-control address" %>
      </div>
      <div class="form-group">
        <%= f.label :phone_number %>
        <%= f.text_area :phone_number, class: "form-control phone_number" %>
      </div>
      <div class="form-group">
        <%= f.submit "編集内容を保存する", class: "btn btn-outline-success mr-5" %>
      </div>
    <% end %>
  </div>
</div>